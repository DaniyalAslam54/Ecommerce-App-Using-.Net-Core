@model List<Category>


<div class="container">
    <div class="row pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">

            <a type="button" asp-action="Create" asp-controller="Category" class="btn btn-primary" >
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-striped table-bordered">

        <thead>
            <tr>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="btn-group float-end" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="w-50 btn btn-warning rounded mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="w-50 btn btn-danger rounded mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>

                        </div>


                    </td>


                </tr>
            }
        </tbody>

    </table>

    </div>
