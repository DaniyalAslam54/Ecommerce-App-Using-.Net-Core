@model Product



<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Product

            </h2>

        </div>
        <div class="mb-3 row">
            <label asp-for="Title">

            </label>
            <input asp-for="Title" disabled type="text" class="form-control" />
            @*<span asp-validation-for="Title" class="text-danger"></span>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="Description">

            </label>
            <input asp-for="Description" disabled type="text" class="form-control" />
            @*<span asp-validation-for="Description" class="text-danger"></span>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="ISBN">

            </label>
            <input asp-for="ISBN" disabled type="text" class="form-control" />
            @*<span asp-validation-for="ISBN" class="text-danger"></span>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="Author">

            </label>
            <input asp-for="Author" disabled type="text" class="form-control" />
            @*<span asp-validation-for="Author" class="text-danger"></span>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="ListPrice">

            </label>
            <input asp-for="ListPrice" disabled type="number" class="form-control" />
            @*<span asp-validation-for="ListPrice" class="text-danger"></span>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="Price">

            </label>
            <input asp-for="Price" disabled type="text" class="form-control" />
            @*<span asp-validation-for="Price" class="text-danger"></span>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="Price50">

            </label>
            <input asp-for="Price50" disabled type="number" class="form-control" />
            @*<span asp-validation-for="Price50" class="text-danger"></span>*@
        </div>
        <div class="mb-3 row">
            <label asp-for="Price100">

            </label>
            <input asp-for="Price100" disabled type="text" class="form-control" />
            @*<span asp-validation-for="Price100" class="text-danger"></span>*@
        </div>


        <button type="submit" class="btn btn-danger">
            Delete
        </button>
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Product">Back</a>
    </div>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}