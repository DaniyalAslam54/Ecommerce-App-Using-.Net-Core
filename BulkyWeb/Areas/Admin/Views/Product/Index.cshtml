@model List<Product>


<div class="container">
    <div class="row pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">

            <a type="button" asp-action="Upsert" asp-controller="Product" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
    <table class="table table-striped table-bordered">

        <thead>
            <tr>
                <th scope="col">
                    Title
                </th>
                <th scope="col">
                    ISBN
                </th>
                <th scope="col">
                    Price
                </th>
                <th scope="col">
                    Author
                </th>
                <th scope="col">
                    Category
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Title
                    </td>
                    <td>
                        @obj.ISBN
                    </td>
                    <td>
                        @obj.Price
                    </td>
                    <td>
                        @obj.Author
                    </td>
                    <td></td>
                    <td>
                        <div class="btn-group float-end" role="group">
                            <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="w-50 btn btn-warning rounded mx-2">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="w-50 btn btn-danger rounded mx-2">
                                <i class="bi bi-trash-fill"></i>
                            </a>

                        </div>


                    </td>


                </tr>
            }
        </tbody>

    </table>

</div>
